PORT=7331
SELF_HOSTED_MODE=true
DISABLE_SIGNUP=true

UPLOAD_PATH="./data/uploads"
DATABASE_URL="postgresql://user@localhost:5432/expensing"

# You can put it here or the app will ask you to enter it
OPENAI_MODEL_NAME="gpt-4o-mini"
OPENAI_API_KEY=""  # "sk-..."

GOOGLE_MODEL_NAME="gemini-2.5-flash"
GOOGLE_API_KEY=""

MISTRAL_MODEL_NAME="mistral-medium-latest"
MISTRAL_API_KEY=""

# Auth Config
BETTER_AUTH_SECRET="random-secret-key"  # please use any long random string here

# Stripe Configuration
STRIPE_SECRET_KEY=""  # "sk_live_..." or "sk_test_..."
STRIPE_WEBHOOK_SECRET=""  # "whsec_..."

# Resend Configuration (optional, use if you want to send emails)
RESEND_API_KEY=""  # "re_..."
RESEND_AUDIENCE_ID=""  # "aud_..."
RESEND_FROM_EMAIL="Expensing <user@localhost>"

# ============================================================================
# RECEIPT MATCHING (Built-in Feature)
# ============================================================================
# Automatic duplicate detection and merging when importing CSV files

# Enable/disable receipt matching (default: true)
RECEIPT_MATCH_ENABLED=true

# Auto-merge threshold (0-100, default: 90)
# Matches with confidence >= this value are automatically merged
# - 100: Only same day + exact amount (most conservative)
# - 90: Same day or ±1 day + exact amount (recommended)
# - 80: Up to ±2 days + exact amount (more aggressive)
RECEIPT_MATCH_AUTO_MERGE_THRESHOLD=90

# Date range for matching (in days, default: 3)
# Search for matches within ±N days of the CSV transaction date
# - 1: Very strict, only ±1 day
# - 3: Recommended, catches most duplicates
# - 7: Wide range, may have false positives
RECEIPT_MATCH_DATE_RANGE_DAYS=3
